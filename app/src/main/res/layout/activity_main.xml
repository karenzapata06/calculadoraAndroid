<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8A19B"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#9ED1E8"
        android:gravity="center"
        android:text="Calculadora"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/calculadorados" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Valor 1"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etvalor1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese valor 1"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Valor 2"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etvalor2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese valor 2"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Resultado"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvresultado"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnsumar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#5DA9E6"
            android:text="+"
            android:textColor="#050202" />

        <Button
            android:id="@+id/btnrestar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#5DA9E6"
            android:text="-"
            android:textColor="#050202" />

        <Button
            android:id="@+id/btnmultiplicar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#5DA9E6"
            android:text="x"
            android:textColor="#050202" />

        <Button
            android:id="@+id/btndividir"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#5DA9E6"
            android:text="/"
            android:textColor="#050202" />

        <Button
            android:id="@+id/btnborrar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#E91E63"
            android:text="C"
            android:textColor="#050202" />
    </LinearLayout>


</LinearLayout>